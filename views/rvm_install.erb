#!/usr/bin/env bash

set -o errtrace
export PS4='+[${BASH_SOURCE}] : ${LINENO} : ${FUNCNAME[0]:+${FUNCNAME[0]}() $ }'

if [[ -f /etc/rvmrc ]] ; then source /etc/rvmrc ; fi

if [[ -f "$HOME/.rvmrc" ]] ; then source "$HOME/.rvmrc" ; fi

rvm_path="${rvm_path:-$HOME/.rvm}"

mkdir -p $rvm_path/src/

builtin cd $rvm_path/src

if hash wget; then
        stable_version=$(wget -O - <%= RVM_HOST %>/releases/stable-version.txt 2>/dev/null)
else
        stable_version=$(curl -B <%= RVM_HOST  %>/releases/stable-version.txt 2>/dev/null)
fi

echo "Installing RVM Version: ${stable_version}"

if hash wget; then
        wget -q "<%= RVM_HOST %>/rubies/packages/rvm/${stable_version}.tar.gz" -O "${stable_version}.tar.gz"
else
        curl -L "<%= RVM_HOST %>/rubies/packages/rvm/${stable_version}.tar.gz" -o "${stable_version}.tar.gz"
fi

# set name of folder we cd into after file is extracted
rvm_src_dir=$(tar tzf "${stable_version}.tar.gz" | tail -1 | awk '{split ($0, a, "/"); print a[1]}')
# extract the downloaded tarball
tar zxf "${stable_version}.tar.gz"
# cd into the extracted directory
builtin cd "${rvm_src_dir}"

# INSTALL RVM!!!
bash ./scripts/install
