%html
  %head
    %meta{'charset' => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge'}
    %meta{'viewport' => 'width=device-width, initial-scale=1'}
    %title RVM::FW - Hidden Rubies for RVM
    %link{:href => "#{ENV['HOST']}/stylesheets/styles.css", :media => 'screen, projection', :type => 'text/css', :rel => 'stylesheet'}
    %link{:rel => 'icon', :type => 'image/x-icon', :href => "#{ENV['HOST']}/favicon.ico"}
    /[if IE]
      %link{:rel => 'shortcut icon', :type => 'image/x-icon', :href => "#{ENV['HOST']}/favicon.ico"}
    /[if lt IE 9]
      %script{src: "#{ENV['HOST']}/javascripts/html5shiv-print.js"}
      %script{src: "#{ENV['HOST']}/javascripts/respond.min.js"}

  %body
    %nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{:type=>'button', :data_toggle=>'collapse', :data_target=>'#rvmfw-navbar', :aria_expanded=>'false', :aria_controls=>'navbar' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#{ENV['HOST']}/"} RVM::FW
        #rvmfw-navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => "#{ENV['HOST']}/files"} Rubies
            %li
              %a{:href => "#{ENV['HOST']}/db", :target => '_blank' } DB
            %li
              %a{:href => "#{ENV['HOST']}/known", :target => '_blank' } Known

    .container
      %header
        %h1.title RVM::FW
        %h2.description Exposing hidden Rubies for firewalled RVMs

      %article
        = yield

    %footer#footer
      .container
        %p
          %a{:href => "#{ENV['FOOTER_URL']}"} #{ENV['FOOTER_TEXT']}

    %script{:src => "#{ENV['HOST']}/javascripts/jquery-1.11.2.min.js"}
    %script{:src => "#{ENV['HOST']}/javascripts/bootstrap.min.js"}
