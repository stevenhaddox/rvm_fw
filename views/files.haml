%ul#files.row
  %li.title.file
    %div.filename.col-md-4.col-md-offset-2
      %h3 Ruby Filename
    %div.md5.col-md-6
      %h3 MD5 Hash
  - @rubies.sort.reverse.each do |filename, params|
    %li.file
      %div.filename.col-md-4.col-md-offset-2
        %a{:href => "#{ENV['HOST']}/rubies/#{params[:path_prefix]}#{filename}"} #{filename}
      %div.md5.col-md-6.code
        - unless params[:md5].nil?
          #{params[:md5]}
        - else
          - file_path = "#{RUBIES_PATH}/#{params[:path_prefix]}#{filename}"
          - if File.exist?(file_path)
            = Digest::MD5.hexdigest(File.open(file_path, "rb") { |f| f.read })
